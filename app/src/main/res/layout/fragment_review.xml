<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mainViewModel"
            type="com.nadosunbae_android.presentation.ui.main.viewmodel.MainViewModel" />

        <variable
            name="reviewListViewModel"
            type="com.nadosunbae_android.presentation.ui.review.viewmodel.ReviewListViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_review_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_background">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_review_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_major_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="24dp"

                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/black_0"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@{mainViewModel.selectedMajor}"
                tools:text="@string/review_example_major_selected" />

            <ImageButton
                android:id="@+id/ib_select_major"
                android:layout_width="48dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1"
                android:background="@android:color/transparent"

                app:layout_constraintBottom_toBottomOf="@+id/tv_major_selected"
                app:layout_constraintStart_toEndOf="@+id/tv_major_selected"
                app:layout_constraintTop_toTopOf="@+id/tv_major_selected"
                app:srcCompat="@drawable/btn_bottom_arrow" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.nadosunbae_android.presentation.ui.review.StickyHeaderScrollView
            android:id="@+id/sv_review"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/cl_review_tool_bar"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <android.widget.Button
                    android:id="@+id/btn_major_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/rectangle_border_gray_10dp"
                    android:drawableRight="@drawable/ic_link"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:includeFontPadding="false"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="10dp"
                    android:text="@string/review_major_page"
                    android:textColor="@color/main_text"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/btn_subject_table"
                    app:layout_constraintEnd_toStartOf="@+id/btn_subject_table"
                    app:layout_constraintTop_toTopOf="@+id/btn_subject_table" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_review_function_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/gray_background"
                    app:layout_constraintTop_toBottomOf="@+id/btn_subject_table">

                    <TextView
                        android:id="@+id/tv_review_function_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:includeFontPadding="false"
                        android:text="@string/review_reviews"
                        android:textColor="@color/black_0"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <android.widget.Button
                        android:id="@+id/btn_sort_latest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:background="@android:color/transparent"
                        android:drawableLeft="@drawable/ic_array"
                        android:drawablePadding="6dp"
                        android:fontFamily="@font/pretendard_light"
                        android:includeFontPadding="false"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingHorizontal="9dp"
                        android:paddingVertical="5dp"
                        android:text="@string/review_latest_order"
                        android:textColor="@color/gray_3"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <android.widget.Button
                        android:id="@+id/btn_review_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:drawableLeft="@drawable/ic_filter_empty"
                        android:drawablePadding="6dp"
                        android:fontFamily="@font/pretendard_light"
                        android:includeFontPadding="false"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingVertical="5dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="7dp"
                        android:text="@string/review_filter"
                        android:textColor="@color/gray_3"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/btn_sort_latest"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view_shadow"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginTop="14dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_review_function_box"
                        android:background="@drawable/shadow_sticky_header" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_review"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="80dp"
                    android:background="@color/gray_background"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/cl_review_function_box"
                    tools:itemCount="5"
                    tools:listitem="@layout/item_list_review" />

                <ImageView
                    android:id="@+id/iv_major_graphic"
                    android:layout_width="match_parent"
                    android:layout_height="192dp"
                    android:scaleType="center"
                    loadImageFromUrl="@{reviewListViewModel.urlMajorGraphic}"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

                <android.widget.Button
                    android:id="@+id/btn_subject_table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/rectangle_border_gray_10dp"
                    android:drawableRight="@drawable/ic_link"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:includeFontPadding="false"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="10dp"
                    android:text="@string/review_subject_table"
                    android:textColor="@color/main_text"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_major_graphic" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.nadosunbae_android.presentation.ui.review.StickyHeaderScrollView>

        <android.widget.Button
            android:id="@+id/btn_write_review"
            android:layout_width="64dp"
            android:layout_height="0dp"
            android:text="@string/review_reviews"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="11sp"
            android:textColor="@color/main_light"
            android:drawableTop="@drawable/ic_write"
            android:drawablePadding="2dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="24dp"
            android:paddingTop="14dp"
            android:paddingBottom="10dp"

            android:background="@drawable/oval_fill_black"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>