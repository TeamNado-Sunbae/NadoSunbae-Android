<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_findpw_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="128dp"
            android:text="@string/findpw_title"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/main_default"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/text_findpw_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/pretendard_regular"
            android:text="@string/findpw_contents"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/text_findpw_title"
            app:layout_constraintTop_toBottomOf="@+id/text_findpw_title" />


        <EditText
            android:id="@+id/et_findpw_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rectangle_border_gray_14"
            android:fontFamily="@font/pretendard_regular"
            android:hint="@string/findpw_email"
            android:paddingStart="16dp"
            android:maxLines="1"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:textColor="@color/gray_3"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_findpw_contents" />

        <TextView
            android:id="@+id/text_findpw_warn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/pretendard_regular"
            android:text="@string/findpw_warn"
            android:textColor="@color/red"
            android:visibility="invisible"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_findpw_email" />

        <Button
            android:id="@+id/btn_findpw_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="242dp"
            android:background="@drawable/rectangle_fill_gray_14"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:fontFamily="@font/pretendard_semibold"
            android:textSize="16sp"
            android:text="@string/findpw_check"
            app:layout_constraintEnd_toEndOf="@+id/et_findpw_email"
            app:layout_constraintStart_toStartOf="@+id/et_findpw_email"
            app:layout_constraintTop_toBottomOf="@+id/text_findpw_warn" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
